# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET    /signup                      controllers.Application.prepareSignup
POST    /signup                     controllers.Application.signup
POST    /login                      controllers.Application.login



GET  /login/github                  controllers.Application.githubLogin
POST /github/callback               controllers.Application.callbackGithub
GET  /github/callback               controllers.Application.callbackGithub
GET /signup/github                  controllers.Application.createFromGithub


GET     /newspeaker                 controllers.Application.newSpeaker
POST    /newspeaker                 controllers.Application.saveNewSpeaker
GET     /find                       controllers.Application.findByEmail(email:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
